<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Title TextView -->
            <TextView
                android:id="@+id/titleTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exam Details"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Divider 1 (Horizontal Line) -->
            <View
                android:id="@+id/divider1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/titleTextView1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

            <!-- Table Header Row -->
            <LinearLayout
                android:id="@+id/headerRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/divider1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="8dp">

                <!-- Branch Column -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Exam"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <!-- Description Column -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Description"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <!-- Previous Year Cutoff Column -->
            </LinearLayout>

            <!-- Divider 2 (Horizontal Line) -->
            <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/headerRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Data Row 1 -->
            <LinearLayout
                android:id="@+id/dataRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/divider2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="8dp">

                <!-- Branch Column -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="GATE (Graduate Aptitude Test in Engineering)"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />

                <!-- Description Column -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text=" It is one of the most widely recognized exams for postgraduate engineering admissions in India. It is accepted by a large number of universities and institutions across the country for M.E./M.Tech and Ph.D. programs."
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />

                <!-- Previous Year Cutoff Column -->
            </LinearLayout>

            <!-- Divider 3 (Horizontal Line) -->
            <View
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/dataRow1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Data Row 2 -->
            <LinearLayout
                android:id="@+id/dataRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/divider3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="8dp">

                <!-- Branch Column -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="GMAT (Graduate Management Admission Test)"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />

                <!-- Description Column -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="It is a standardized test used for admissions to various graduate management programs, primarily in business schools (MBA programs) around the world."
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />

                <!-- Previous Year Cutoff Column -->
            </LinearLayout>

            <!-- Divider 4 (Horizontal Line) -->
            <View
                android:id="@+id/divider4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/dataRow2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Data Row 3 (Artificial Intelligence and Data Science) -->
            <LinearLayout
                android:id="@+id/dataRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/divider4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="8dp">

                <!-- Branch Column -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="TOEFL (Test of English as a Foreign Language)"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />

                <!-- Description Column -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="It is an English proficiency test used to assess the English language skills of non-native English speakers. "
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />

                <!-- Previous Year Cutoff Column -->
            </LinearLayout>

            <!-- Divider 5 (Horizontal Line) -->
            <View
                android:id="@+id/divider5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/dataRow3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Data Row 4 (Artificial Intelligence and Machine Learning) -->
            <LinearLayout
                android:id="@+id/dataRow4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/divider5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="8dp">

                <!-- Branch Column -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="IELTS (International English Language Testing System)"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />

                <!-- Description Column -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="It is an English language proficiency test used to assess the English language skills of non-native English speakers. "
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />

                <!-- Previous Year Cutoff Column -->
            </LinearLayout>

            <!-- Divider 6 (Horizontal Line) -->
            <View
                android:id="@+id/divider6"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/dataRow4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Data Row 5 (Civil Engineering) -->
            <LinearLayout
                android:id="@+id/dataRow5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/divider6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="8dp">

                <!-- Branch Column -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="GRE(Graduate Record Examination)"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />

                <!-- Description Column -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text=" is a standardized test used for admissions into graduate and business programs in various English-speaking countries, primarily the United States. "
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />

                <!-- Previous Year Cutoff Column -->
            </LinearLayout>

            <!-- Divider 7 (Horizontal Line) -->
            <View
                android:id="@+id/divider7"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/dataRow5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Data Row 6 (Computer Science and Design) -->
            <LinearLayout
                android:id="@+id/dataRow6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/divider7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="8dp">

                <!-- Branch Column -->

                <!-- Description Column -->

                <!-- Previous Year Cutoff Column -->

                <Button
                    android:id="@+id/buttonHomePage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="503dp"
                    android:background="@layout/rounded_button"
                    android:backgroundTint="@color/teal_200"
                    android:onClick="onGetStartedButtonClick1"
                    android:padding="16dp"
                    android:text="Back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.049"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />
            </LinearLayout>
            <!-- Continue adding more data rows as needed -->
            <!-- Data Row 7 (Example) -->
            <LinearLayout
                android:id="@+id/dataRow7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/divider7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="8dp">

                <!-- Branch Column -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="CAT (Common Admission Test)"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <!-- Description Column -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="It is a highly competitive entrance examination used for admission into postgraduate management programs, primarily in Indian business schools, including the prestigious Indian Institutes of Management (IIMs)."
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <!-- Previous Year Cutoff Column -->
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- CardView 4 -->

    </RelativeLayout>

</ScrollView>
